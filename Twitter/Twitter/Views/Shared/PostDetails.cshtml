@model Twitter.Models.Post

<div class="container col-lg-5 col-md-5 post">
    <h4>
        Published by: @Html.DisplayFor(model => model.Publisher.UserName)
    </h4>
    <p>
        @Html.DisplayFor(model => model.Title)
        <br />
        @Html.DisplayFor(model => model.Body)
    </p>
    <br />
    <p>
        Published on: @Html.DisplayFor(model => model.PublishedOn)
    </p>
    <div>
        @Html.Partial("Unfollow", Model.Publisher.Id)
    </div>
    @Html.ActionLink("Edit", "Edit", "Post", new { id = Model.Id }, null) |
    @Html.ActionLink("Delete", "Delete", "Post", new { id = Model.Id }, null)
    </div>